<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_background"
        android:scaleType="fitXY"
        android:src="@drawable/title_background"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_time"
        android:layout_marginTop="80dp"
        android:layout_width="600dp"

        android:layout_height="100dp">

        <TextClock
            android:format12Hour="hh:mm:ss"
            android:layout_gravity="center_vertical"
            android:textSize="55sp"
            android:layout_width="0dp"
            android:textColor="#fff"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/ll_weekdate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextClock
                android:textSize="25sp"
                android:format12Hour="EEEE"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                android:layout_height="wrap_content"/>
            <TextClock
                android:textColor="#fff"
                android:format12Hour="yyyy年MM月dd日"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_weather"
        android:layout_marginTop="80dp"
        android:layout_width="625dp"

        android:layout_alignParentEnd="true"

        android:layout_height="100dp">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/a100"
    android:id="@+id/img_cond"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C59C60"
                android:textSize="35sp"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="天气"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a900"
           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C59C60"
                android:textSize="35sp"
                android:id="@+id/tv_tmp"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="温度"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a200"
           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C59C60"
                android:textSize="35sp"
                android:id="@+id/tv_wind_dir"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="风向"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a210"
           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C59C60"
                android:textSize="35sp"
                android:layout_gravity="center"
                android:id="@+id/wind_sc"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="风力"
                android:textSize="20sp"/>
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:background="@drawable/background_down1"
      android:layout_height="match_parent">
      <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="3"
          android:orientation="vertical"
          android:layout_marginLeft="5dp"
          android:layout_marginBottom="70dp"
          android:background="@drawable/background_left1"
      android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_total"
            android:textColor="#F3D7AF"
            android:textSize="55sp"
            android:text="379"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_gravity="center"

            android:textSize="35sp"
            android:text="当前在场人数"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"

        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_in"
            android:textColor="#F3D7AF"
            android:textSize="55sp"
            android:text="475"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="35sp"
            android:layout_gravity="center"

            android:text="进场人数"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_out"
            android:textColor="#F3D7AF"
            android:textSize="55sp"
            android:text="104"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="35sp"
            android:layout_gravity="center"

            android:text="离场人数"/>
    </LinearLayout>
</LinearLayout>
          <LinearLayout
              android:layout_margin="20dp"
              android:background="@drawable/bacground_left_2"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="3">

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rv_classcount"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="30dp"
                 android:layout_marginBottom="40dp"
                  android:overScrollMode="never"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>



          </LinearLayout>
  </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="5"
          android:layout_marginRight="5dp"
          android:layout_height="match_parent"
          android:layout_marginBottom="70dp"
          android:background="@drawable/background_right1"
          android:layout_marginLeft="30dp">
<androidx.recyclerview.widget.RecyclerView
    android:layout_margin="30dp"
    android:id="@+id/rv_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"


    />
      </LinearLayout>

  </LinearLayout>
</LinearLayout>