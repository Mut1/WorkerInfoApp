<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_background"
        android:scaleType="fitXY"
        android:src="@drawable/title_background"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_time"
        android:background="#fff"
        android:layout_marginTop="80dp"
        android:layout_width="600dp"
        android:layout_height="100dp">
<TextView
    android:text="15：34：55"
    android:layout_gravity="center_vertical"
    android:textSize="55sp"
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="wrap_content"
    android:gravity="center"
    />
        <LinearLayout
            android:id="@+id/ll_weekdate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="星期三"
                android:textSize="25sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="2020年12月10日"
                android:textSize="25sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_weather"
        android:background="#fff"
        android:layout_marginTop="80dp"
        android:layout_width="600dp"
        android:layout_alignParentEnd="true"
        android:layout_height="100dp">

    </LinearLayout>
</RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:background="@drawable/background_down1"
      android:layout_height="match_parent">
      <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
          android:layout_marginLeft="5dp"
          android:layout_marginBottom="70dp"
          android:background="@drawable/background_left1"
      android:layout_height="match_parent">

  </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="3"
          android:layout_marginRight="5dp"
          android:layout_height="match_parent"
          android:layout_marginBottom="70dp"
          android:background="@drawable/background_right1"
          android:layout_marginLeft="30dp">

      </LinearLayout>

  </LinearLayout>
</LinearLayout>